<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fb_reader_list_item_parentview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fb_reader_listview_bg" >

    <TextView
        android:id="@+id/fb_reader_rowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp"
        android:textStyle="bold" >
    </TextView>

    <CheckBox
        android:id="@+id/fb_reader_checkBox"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:button="@drawable/fb_reader_check_box"
        android:focusable="false"
        android:visibility="invisible" >
    </CheckBox>

</RelativeLayout>